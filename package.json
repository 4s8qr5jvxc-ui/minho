{
    "name": "minhe-desktop",
    "version": "1.0.0",
    "description": "Hyper-Detailed Social App Desktop",
    "main": "electron-main.js",
    "scripts": {
        "start": "electron .",
        "build-client": "cd client && npm install && npm run build",
        "install-server": "cd server && npm install",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.minhe.desktop",
        "productName": "MINHE",
        "win": {
            "target": "nsis",
            "icon": "client/public/logo.png"
        },
        "files": [
            "electron-main.js",
            "server/**/*",
            "package.json"
        ],
        "asar": true,
        "extraResources": [
            "server/minhe_secure.enc"
        ]
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "wait-on": "^7.2.0",
        "express": "^4.18.2",
        "socket.io": "^4.7.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "multer": "^1.4.5-lts.1",
        "peer": "^1.0.0",
        "uuid": "^9.0.1"
    }
}